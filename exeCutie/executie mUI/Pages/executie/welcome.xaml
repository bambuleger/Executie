<UserControl x:Class="executie_mUI.Pages.executie.welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    
    
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Image Width="700" Height="300" Source="/media/codingbad.jpg" Opacity="0.75"/>
                <mui:ModernFrame x:Name="Frame"
                                 Source="/Content/changelog/recentchanges.xaml"
                                 Width="700" Height="170" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1"/>
                <mui:ModernFrame x:Name="Settings"
                                 Source="/Content/SettingsAppearance.xaml"
                                 Width="0" Height="0"
                                 Visibility="Hidden"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>