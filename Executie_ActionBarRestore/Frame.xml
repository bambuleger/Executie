<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="Frame.lua" />
	<Frame name="MainFrame" movable="true">
		<Size x="573" y="301" />
		<Anchors>
			<Anchor point="TOPLEFT">
				<Offset x="120" y="-190" />
			</Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString inherits="GameFontNormal" text="Executie ActionBarRestore" justifyH="LEFT">
					<Size x="525" y="28" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="23" y="-25" />
						</Anchor>
					</Anchors>
					<FontHeight val="14" />
				</FontString>
				<FontString inherits="GameFontNormal" text="This Addon will help you, to get your Action Bars setup correctly to use with Executie. WARNING: This will remove all your Spells from your Bars.  If you want to save them, use Addons like &quot;ActionBarSaver&quot;. You can change the order of spells in anyway you like, just make sure they have a keybind." justifyV="TOP" justifyH="LEFT">
					<Size x="525" y="46" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="23" y="-59" />
						</Anchor>
					</Anchors>
				</FontString>
				<FontString inherits="GameFontNormal" text="If you have problems using this, try to disable any Addon that customizes your Action Bars " justifyH="LEFT">
					<Size x="447" y="23" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="20" y="-249" />
						</Anchor>
					</Anchors>
					<FontHeight val="10" />
				</FontString>
				<FontString inherits="GameFontNormal" text="Use this button, to setup your Action Bars for Arms." justifyV="TOP" justifyH="LEFT">
					<Size x="318" y="20" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="104" y="-139" />
						</Anchor>
					</Anchors>
				</FontString>
				<FontString inherits="GameFontNormal" text="Use this button to setup your Action Bars for Fury." justifyH="LEFT">
					<Size x="302" y="20" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="104" y="-178" />
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="ButtonClose" inherits="UIPanelButtonTemplate" text="Close">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="473" y="-249" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						ButtonClose_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="ButtonArms" inherits="UIPanelButtonTemplate" text="Arms">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="23" y="-136" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						ButtonArms_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="ButtonFury" inherits="UIPanelButtonTemplate" text="Fury">
				<Size x="75" y="23" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="23" y="-178" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						ButtonFury_OnClick()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnDragStart>
				self:StartMoving();
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>